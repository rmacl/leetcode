var addDigits = function(num) {
    var iTotal =0;
    (num+ "").split("").forEach((iValue,iIndex)=>{
        iTotal += parseInt(iValue);
        if(iTotal >= 10){
            iTotal = (iTotal % 10) +1;          
        }
    });
    return iTotal;
};

var addDigits = function(num) {
    return num==0? 0 : (num%9==0?9: num%9)
};
