var isBalanced = function(root) {
    var iMin;
    var iMax;
    var searchTree = function(root, iLevel){
        if(root == null){
            iMin = (iMin < iLevel) ? iMin : iLevel;
            iMax = (iMax > iLevel) ? iMax : iLevel;
            return;
        }
        searchTree(root.right , iLevel+1);
        searchTree(root.left , iLevel+1);
    }
    searchTree(root, 0);
    if(iMax-iMin > 1){
        return false;
    }
    return true;
};
