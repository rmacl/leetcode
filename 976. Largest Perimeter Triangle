var largestPerimeter = function(A) {
    A.sort((a,b) => b-a);
    let max = -Infinity;
    for(let index = 0; index < A.length-2; index++){
        let first = A[index];
        let second = A[index+1];
        let third = A[index+2];
        if(first >= (second + third)){
            continue;
        }
        max = Math.max(first+second+third, max);
    }
    return (max == -Infinity) ? 0 : max;
};
